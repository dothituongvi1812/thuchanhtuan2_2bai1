<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập hệ thống"
        android:textSize="25dp"
        android:textAlignment="center"
        android:background="#39AE3E"
        android:textFontWeight="700" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài khoản: "
            android:textSize="25dp"
            android:layout_marginRight="20dp"
            android:paddingRight="4dp"
            />
        <EditText
            android:id="@+id/edtTaiKhoan"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:hint="Không được để trống"
            android:textSize="25dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tvTb_TK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#EA4242"
        android:textStyle="italic"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu: "
            android:textSize="25dp"
            android:layout_marginRight="20dp"
            android:paddingRight="5dp"
           />
        <EditText
            android:id="@+id/edtMatKhau"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:hint="Không được để trống"
            android:textSize="25dp"
            android:inputType="textPassword"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tvTb_MK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#EA4242"
        android:textStyle="italic"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <CheckBox
            android:id="@+id/chkLuuThongTin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu thông tin"
            android:layout_marginRight="10dp"
            android:textSize="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="right">
        <Button
            android:id="@+id/buttonDangNhap"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:backgroundTint="#AFA9A9"
            android:text="Đăng nhập"
            android:textColor="#000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/buttonThoat"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#AFA9A9"
            android:textColor="#000"
            android:text="Thoát"/>

    </LinearLayout>
</LinearLayout>